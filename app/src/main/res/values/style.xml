<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>

        <!--this item is optional as all the snackbar wont contain the action button-->
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
    </style>

    <style name="BottomNavigationTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">13.5sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="MediumText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="BoldText" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HeaderText" parent="@android:style/TextAppearance">
        <item name="android:textSize">18.5sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="AnimeItemTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text3</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AnimeTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text3</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>

    <style name="ActionButtonText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.M3.Comp.NavigationBar.ActiveIndicator.Shape</item>
        <item name="android:color">@color/mainAccent1</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_shape</item>
        <item name="android:windowMinWidthMajor">67%</item>
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowElevation">8dp</item>
    </style>

    <style name="CustomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
        <item name="android:antialias">true</item>
    </style>

    <style name="ExoStyledControls.Button.Center.Back">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:contentDescription">Back</item>
        <item name="tint">@android:color/white</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="ExoStyledControls.Button.Center.Download">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:src">@drawable/download</item>
        <item name="android:contentDescription">Back</item>
        <item name="tint">@android:color/white</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="CustomButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="DetailsButtonShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="WatchButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="icon">@drawable/play</item>
        <item name="iconTint">@color/text</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">26dp</item>
        <item name="android:text">@string/watch</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:backgroundTintMode">src_in</item>
        <item name="rippleColor">@color/rippleColor1</item>
    </style>

    <style name="WatchButtonStyle.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="icon">@drawable/play</item>
        <item name="iconTint">@color/text3</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">26dp</item>
        <item name="android:text">@string/watch</item>
        <item name="android:textColor">@color/text3</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="shapeAppearance">@style/CustomButtonShape</item>
        <item name="strokeColor">@color/text3</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="FavoriteButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="icon">@drawable/favorite_outlined</item>
        <item name="iconTint">@color/icon</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">26dp</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="shapeAppearance">@style/CustomButtonShape</item>
        <item name="strokeColor">@color/icon</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:text">Help</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">@color/mainAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/border1</item>
    </style>

    <style name="FilledButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="rippleColor">@color/rippleColor1</item>
    </style>

    <style name="CustomCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:background">@drawable/ripple_checkbox</item>
    </style>

    <style name="PlayerTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlHighlight">#33FFFFFF</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>

        <item name="colorControlActivated">#E0E0E0</item>
        <item name="android:colorEdgeEffect">#E0E0E0</item>
        <item name="colorPrimary">#121212</item>
    </style>

    <style name="ExoStyledControls.Button.Center.Progress">
        <item name="android:padding">@dimen/exo_icon_padding</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">

        <!--this child makes changes to the background color of the snackbar-->
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Snackbar</item>

        <!--if this is made 0 then the action button text color will be white-->
        <!--if this is 1 then the custom color can be set to action button text-->
        <item name="actionTextColorAlpha">1</item>
    </style>

    <!--this is child is needed only when there is action button in snackbar-->
    <!--otherwise this is not necessary-->
    <!--in this case the action button color inside the snackbar is set to red-->
    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/snackBarText</item>
    </style>

    <!--this color inside this child is the background color of the snackbar-->
    <style name="ThemeOverlay.App.Snackbar" parent="">
        <item name="colorOnSurface">@color/snackBarBackground</item>
    </style>

    <style name="ExoStyledControls.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">@dimen/exo_icon_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/exo_icon_horizontal_margin</item>
    </style>
    <style name="ExoStyledControls.Button.Bottom">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/exo_small_icon_width</item>
        <item name="android:layout_height">@dimen/exo_small_icon_height</item>
        <item name="android:layout_marginLeft">@dimen/exo_small_icon_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/exo_small_icon_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/exo_small_icon_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/exo_small_icon_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/exo_small_icon_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/exo_small_icon_padding_vertical</item>
    </style>

    <style name="ExoStyledControls.Button.Bottom.Skip">
        <item name="android:src">@drawable/skip</item>
        <item name="android:scaleType">center</item>
        <item name="android:contentDescription">@string/exo_controls_fullscreen_enter_description</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13.5sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="endIconTint">@color/stroke_color</item>
        <item name="hintTextColor">@color/main</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="helperTextTextColor">@color/text2</item>
        <item name="boxBackgroundMode">outline</item>
    </style>

    <style name="NoRippleListItem">
        <item name="android:background">@null</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
        <item name="colorControlHighlight">@null</item>
    </style>

    <style name="HintAppearance">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="HelperAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AppBarButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/ripple_background</item>
    </style>
</resources>