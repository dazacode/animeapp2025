<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false" android:color="@color/strokeColor"/>
    <!-- Focused state -->
    <item android:state_focused="true" android:color="@color/main"/>
    <!-- Default state (not focused and enabled) -->
    <item android:color="@color/strokeColor"/>
</selector>